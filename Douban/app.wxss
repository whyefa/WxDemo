/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  font-family: "Microsoft YaHei";
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.page_hd {
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.page_hd_title {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 50rpx;
}
